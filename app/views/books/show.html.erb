<div class="container">
  <h1><%= @book.title %><h1>
  <h4><%= @book.author %></h4>
  <h5><%= @book.category.name %></h5>
  <p><%= @book.description %></p>
  <%= link_to 'Back', root_path %>
  <% if user_signed_in? %>
    <% if @book.user_id == current_user.id %>
      <%= link_to 'Edit', edit_book_path %>
      <%= link_to 'Delete', book_path, method: :delete, data: { confirm: "Are you sure?"} %>
    <% end %>
  <% end %>
</div>