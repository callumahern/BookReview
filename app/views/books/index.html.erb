<br>
<div class="container">
<h2 class="current-category"><%= params[:category] %></h2>
<% if @books.count == 0 %>
  <h3>There are no books in this category</h1>
<% else %>
  <% @books.each do |book| %>
    <h2><%= link_to book.title, book_path(book) %></h2>
  <% end %>
  <%= link_to 'Add Book', new_book_path %>
<% end %>
</div>